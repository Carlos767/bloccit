<div class="row">
   <div class="tabbable tabs-left">
     <ul class="nav nav-tabs">
       <li class="active"><a href="#posts" data-toggle="tab">Posts</a></li>
       <li><a href="#comments" data-toggle="tab">Comments</a></li>
     </ul>
     <div class="tab-content">
       <div class="tab-pane active" id="posts">
         <%= render @posts %>
       </div>
       <div class="tab-pane" id="comments">
         <%= render @comments %>
       </div>
       <small>
       <div class='js-comments-count'><%= pluralize(@user.comments.count, 'comment') %></div>
         </small>
     </div>
   </div>
 </div>
 

<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#posts" aria-controls="posts" role="tab" data-toggle="tab">Posts</a></li>
    <li role="presentation"><a href="#comments" aria-controls="comments" role="tab" data-toggle="tab">Comments</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
      <%= render @posts %>
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
      <%= render @comments %>
    </div>

  </div>

</div>