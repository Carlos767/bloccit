<h1>All Posts</h1>
<% @posts.each do |post| %>
	<div class="media">
		<div class="media-body">
			<h4 class="media-heading">
				<%= link_to post.title, post %>
			</h4>
		</div>
	</div>
<% end %>

<% @advertising.each do |advertising| %>
	<div class="copy">
		<div class="copy-price">
			<h5 class="copy-title">
				<%= link_to advertising.title, advertising %>
			</h5>
		</div>
	</div>
<% end %>
